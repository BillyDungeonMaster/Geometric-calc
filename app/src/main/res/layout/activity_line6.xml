<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLine6"
    android:orientation="vertical"
    android:background="#47A891">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/point_x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="x1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/point_y1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="y1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/point_x2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="x2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_x1"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/point_y2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="y2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_y1"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/point_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="x "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/point_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="y "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задачи на точку и прямую"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Координаты точек прямой"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:textColor="@color/white"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Координаты точки"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_x2"
            android:textColor="@color/white"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/buttonOnLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лежит ли точка на прямой"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_y"
            android:onClick="onLineClick"
            android:backgroundTint="@color/green_200"
            android:textSize="25dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
