<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionLine"
    android:orientation="vertical"
    android:background="#47A891">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/cord6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green_200"
            android:onClick="lineAndPoint"
            android:text="Задачи на точку и прямую"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cord8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green_200"
            android:onClick="lineAndLine"
            android:text="Задачи с двумя прямыми"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/cord6" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>





